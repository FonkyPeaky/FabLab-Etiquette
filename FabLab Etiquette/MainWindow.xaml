<Window x:Class="FabLab_Etiquette.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="FabLab Étiquette - Gestion des Fichiers" Height="400" Width="600">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="Créer une étiquette PDF" Command="{Binding CreatePdfCommand}" Width="250" Height="50" />
            <Button Content="Standardiser un fichier PDF" Command="{Binding StandardizePdfCommand}" Width="250" Height="50" />
        </StackPanel>
        <Label Content="FabLab Etiquette V.1 -- Merci de lire le PDF dans le dossier source." HorizontalAlignment="Center" Margin="0,69,0,0" VerticalAlignment="Top" Height="35" Width="362"/>
    </Grid>
</Window>
