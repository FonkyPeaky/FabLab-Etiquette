<Window x:Class="FabLab_Etiquette.Views.UserInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Informations Demandeur" Height="250" Width="400" WindowStartupLocation="CenterScreen">

    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Nom du demandeur :" />
            <TextBox x:Name="UserNameTextBox" Margin="0,5,0,10"/>

            <TextBlock Text="Service :" />
            <TextBox x:Name="UserServiceTextBox" Margin="0,5,0,10"/>

            <TextBlock Text="Numéro du demandeur :" />
            <TextBox x:Name="UserNumberTextBox" Margin="0,5,0,10"/>

            <Button Content="Valider" Click="OnValidateClick" HorizontalAlignment="Right"/>
        </StackPanel>
    </Grid>
</Window>
